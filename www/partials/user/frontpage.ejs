<div ng-mousedown="hideSidebar($event)">
	<!-- SideBar with Form for Log In-->
	<div data-header-directive></div>

	<div class="ui page grid information" ng-controller="homeController">
	
		<div data-breadcrumb-directive></div>

		<div class="sixteen wide column">

			<div class="ui divider"></div>

			<div class="ui filter menu">
				<a class="item" ng-class="{active:tab === 'products'}" ng-click="showTab('products')">
					<i class="archive icon"></i>Products
				</a>
				<a class="item" ng-class="{active:tab === 'users'}" ng-click="showTab('users')">
					<i class="users icon"></i>Users
				</a>
				<a class="item" ng-class="{active: tab === 'edits'}" ng-click="showTab('edits')">
					<i class="users icon"></i>Edits
				</a>
				<div class="right menu">
					<div class="item">
						<div class="ui icon input">
							<input type="text" placeholder="Search...">
							<i class="search link icon"></i>
						</div>
					</div>
				</div>
			</div>
			<div ng-class="{active:tab === 'products'}" class="ui divided selection list tab">
				<button class="bottom-button select-button">Select All</button>
				<button class="bottom-button select-button">Select None</button>
				<button class="bottom-button select-button">Invert Selection</button>
				<div class="shaded-bg">
					<div ng-repeat="product in products" class="item">
						<div class="left floated"><input type="checkbox" name="selected"></div>
						<div class="right floated date"><button class="ui green button tiny">edit</button></div>
						<div class="right floated date">{{product.date}}</div>
						<div class="name" >
							<a href="#/products/product">{{product.name}}</a>
						</div>
					</div>
				</div>
				<button class="bottom-button add-button">Add Product</button>
				<button class="bottom-button remove-button">Remove Selection</button>
			</div>
			
			<div ng-class="{active:tab === 'users'}" class="ui divided selection list tab shaded-bg">
				<a ng-repeat="user in users" href="#/users/user" class="item">
					<div class="right floated date"><button class="ui green button tiny">edit</button></div>
					<div class="right floated date">{{user.date}}</div>
					<div class="right floated date">{{user.registerdate}}</div>
					<div class="name">
						{{user.email}}
					</div>
					<div class="name">
						{{user.permissions}}
					</div>
				</a>
			</div>

			<div ng-class="{active: tab === 'edits'}" class="ui divided selection list tab">
				<div class=" ui toggle button">Approved</div>
				<div class=" ui toggle button">Pending</div>
				<div class=" ui toggle button">Denied</div>
				<div  class="ui shaded-bg">
					<a ng-repeat="edit in edits" href="#/edits/edit" class="item">
						<div class="right floated date">
						<div class="ui tiny buttons">
							<div class="ui green button">APPROVE</div>
							<div class="or"></div>
							<div class="ui red button">REJECT</div>
						</div>
						</div>
						<div class="right floated date">{{edit.date}}</div>
						<div class="name">
							{{edit.name}}
						</div>
					</a>
				</div>
				
			<div ng-class="{active: tab === 'edits'}" class="ui divided selection list tab shaded-bg">
				<a ng-repeat="edit in edits" href="#/edits/edit" class="item">
					<div class="right floated date">{{edit.editdate}}</div>
					<div class="name">
						{{edit.edittype}}
					</div>
				</a>
			</div>

			<div class="ui divider"></div>

			<div data-pagination-directive total-items="totalTabItems" current-page="currentPage"
					page-range="pageRange" items-per-page="itemsPerPage" item-type="tab" redirect-url="/home"></div>
		</div>
	</div>
</div>